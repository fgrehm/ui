<script type="text/javascript">
  function closeModal() {
    $(window).unbind('keyup');
    $('.modalClose').click();
  }
  
  function openModal(content) {
    content.modal();
    $(window).keyup(function(e) { if (e.keyCode == 27) closeModal(); });
  }
</script>
<a href="#" onclick="openModal($('#email_prompt_modal')); return false;">Email a Friend</a>
<div id="email_prompt_modal" style="display: none;">
  <h1>Email a Friend</h1>
  <form id="email_prompt_form" action="<%= @url %>" method="post">
    <label>Friend's Email Address:</label>
    <input type="text" id="email_address" name="email_address"><br />
    <input type="submit" class="submit" value="Submit">
  </form>
</div>
